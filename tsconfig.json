{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@vibe-haptic/native": ["./native"]
    }
  },
  "include": ["src/**/*", "src/bin/**/*"],
  "exclude": ["node_modules", "dist", "target", "**/__test__/**", "**/*.spec.ts", "**/*.test.ts"]
}
